{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    /* Modules */
    "module": "es2020",
    /* Emit */
    "removeComments": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
